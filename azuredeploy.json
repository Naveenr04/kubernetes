{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ClusterName": {
            "defaultValue": "MyAKSCluster",
            "type": "String"
        },
        "LinuxVMSize": {
            "defaultValue": "Standard_B2s",
            "type": "String"
        },
        "WindowsVMSize": {
            "defaultValue": "Standard_B4ms",
            "type": "String"
        },
        "KubernetesVersion": {
            "defaultValue": "1.18.2",
            "type": "String"
        },
        "dnsPrefix": {
            "defaultValue": "myprefix",
            "type": "string"
        },
        "SQLServerName": {
            "defaultValue": "chuckaks2sql",
            "type": "String"
        },        
        "SQLServerAdminLogin": {
            "defaultValue":"sqladmin",
            "type": "string",
            "minLength": 1
        },
        "SQLServerAdminLoginPassword": {
            "defaultValue":"!Profisee1!",
            "type": "securestring"
        },
        "SQLDatabaseName": {
            "defaultValue": "Profisee",
            "type": "String"
        },
        "StorageAccountName": {
            "defaultValue": "chuckaksstorage",
            "type": "String"
        }, 
        "AKSStorageType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        },
         "FileShareName": {
            "defaultValue": "files",
            "type": "String"
        },        
        "TennantId": {
            "defaultValue": "",
            "type": "String"
        },
        "OIDCClientID": {
            "defaultValue": "",
            "type": "String"
        },
        "OIDCClientSecret": {
            "defaultValue": "",
            "type": "String"
        },
         "AdminUserAccountName": {
            "defaultValue": "",
            "type": "String"
        },
         "ExternalDNSUrl": {
            "defaultValue": "",
            "type": "String"
        },
        "LicenseData": {
            "defaultValue": "",
            "type": "String"
        },
       "AcrUser": {
            "defaultValue": "",
            "type": "String"
        },
        "AcrUserPassword": {
            "defaultValue": "",
            "type": "String"
        },
        "tlsCert": {
            "defaultValue": "",
            "type": "String"
        },
        "tlsKey": {
            "defaultValue": "",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-03-01",
            "name": "[parameters('ClusterName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Free"
            },
            "properties": {
                "kubernetesVersion": "[parameters('KubernetesVersion')]",
                "dnsPrefix": "[parameters('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "nplinux1",
                        "count": 1,
                        "vmSize": "[parameters('LinuxVMSize')]",
                        "osDiskSizeGB": 100,
                        "maxPods": 30,
                        "type": "VirtualMachineScaleSets",
                        "orchestratorVersion": "[parameters('KubernetesVersion')]",
                        "enableNodePublicIP": false,
                        "nodeLabels": {},
                        "mode": "System",
                        "osType": "Linux"
                    },
                    {
                        "name": "npwin1",
                        "count": 1,
                        "vmSize": "[parameters('WindowsVMSize')]",
                        "osDiskSizeGB": 100,
                        "maxPods": 30,
                        "type": "VirtualMachineScaleSets",
                        "orchestratorVersion": "[parameters('KubernetesVersion')]",
                        "enableNodePublicIP": false,
                        "mode": "User",
                        "osType": "Windows"
                    }
                ],
                "linuxProfile": {
                    "adminUsername": "azureuser",
                    "ssh": {
                        "publicKeys": [
                            {
                                "keyData": "ssh-rsa "
                            }
                        ]
                    }
                },
                "windowsProfile": {
                    "adminUsername": "winadmin",
                    "adminPassword": "Ple@seCh@ngeMe1234!"
                },
                "servicePrincipalProfile": {
                    "clientId": "9f79b1ec-0762-495a-86a0-185fa604f028",
                    "secret": "deaea826-7e51-47e8-a850-3fa4c0a5f9bb"
                },                
                "nodeResourceGroup": "[concat('MC_',resourceGroup().name,'_', parameters('ClusterName'), '_',resourceGroup().location)]",
                "enableRBAC": true,
                "networkProfile": {
                    "networkPlugin": "azure",
                    "loadBalancerSku": "Standard",
                    "serviceCidr": "10.0.0.0/16",
                    "dnsServiceIP": "10.0.0.10",
                    "dockerBridgeCidr": "172.17.0.1/16",
                    "outboundType": "loadBalancer"
                }
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/agentPools",
            "apiVersion": "2020-03-01",
            "name": "[concat(parameters('ClusterName'), '/nplinux1')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('ClusterName'))]"
            ],
            "properties": {
                "count": 1,
                "vmSize": "[parameters('LinuxVMSize')]",
                "osDiskSizeGB": 100,
                "maxPods": 30,
                "type": "VirtualMachineScaleSets",
                "orchestratorVersion": "1.18.2",
                "enableNodePublicIP": false,
                "nodeLabels": {},
                "mode": "System",
                "osType": "Linux"
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/agentPools",
            "apiVersion": "2020-03-01",
            "name": "[concat(parameters('ClusterName'), '/npwin1')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('ClusterName'))]"
            ],
            "properties": {
                "count": 1,
                "vmSize": "[parameters('WindowsVMSize')]",
                "osDiskSizeGB": 100,
                "maxPods": 30,
                "type": "VirtualMachineScaleSets",
                "orchestratorVersion": "1.18.2",
                "enableNodePublicIP": false,
                "mode": "User",
                "osType": "Windows"
            }
        },
        {
            "name": "[parameters('SQLServerName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-06-01-preview",
            "dependsOn": [],
            "tags": {
                "displayName": "SQLServer"
            },
            "properties": {
                "administratorLogin": "[parameters('SQLServerAdminLogin')]",
                "administratorLoginPassword": "[parameters('SQLServerAdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('SQLServerName'))]"
                    ],
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    }
                }
            ]
        },
        {
            "name": "[parameters('StorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {
                "displayName": "[parameters('StorageAccountName')]"
            },
            "properties": {
                "accountType": "[parameters('AKSStorageType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "name": "[concat(parameters('StorageAccountName'), '/default/', parameters('fileShareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('StorageAccountName'))]"
            ]
        },
        {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2019-10-01-preview",
        "name": "InstallNginxFromPowershellInline",
        "location": "[resourceGroup().location]",
        "kind": "AzureCLI",
        "identity": {
            "type": "userAssigned",
            "userAssignedIdentities": {
            "/subscriptions/73814551-37dd-4143-a149-df9c2a2c97b6/resourcegroups/ChuckAKS/providers/Microsoft.ManagedIdentity/userAssignedIdentities/ChuckUserIdentity": {}
            }
        },
        "properties": {
            "forceUpdateTag": "1",
            "azPowerShellVersion": "2.0.80",
            "environmentVariables": [
                {
                    "name": "RESOURCEGROUPNAME",
                    "secureValue": "[resourceGroup().name]"
                },
                {
                    "name": "CLUSTERNAME",
                    "secureValue": "[parameters('ClusterName')]"
                },
                {
                    "name": "SQLNAME",
                    "secureValue": "[concat(parameters('SQLServerName'),'.database.windows.net')]"
                },
                {
                    "name": "SQLUSERNAME",
                    "secureValue": "[parameters('SQLServerAdminLogin')]"
                },
                {
                    "name": "SQLUSERPASSWORD",
                    "secureValue": "[parameters('SQLServerAdminLoginPassword')]"
                },
                {
                    "name": "SQLDBNAME",
                    "secureValue": "[parameters('SQLDatabaseName')]"
                },
                {
                    "name": "STORAGEACCOUNTNAME",
                    "secureValue": "[parameters('StorageAccountName')]"
                },
                {
                    "name": "FILEREPOUSERNAME",
                    "secureValue": "[concat('Azure\\',parameters('StorageAccountName'))]"
                },
                {
                    "name": "FILEREPOURL",
                    "secureValue": "[concat('\\\\',parameters('StorageAccountName'),'.file.core.windows.net\\',parameters('FileShareName'))]"
                },
                {
                    "name": "OIDCCLIENTID",
                    "secureValue": "[parameters('OIDCClientID')]"
                },
                {
                    "name": "OIDCCLIENTSECRET",
                    "secureValue": "[parameters('OIDCClientSecret')]"
                },
                {
                    "name": "ADMINACCOUNTNAME",
                    "secureValue": "[parameters('AdminUserAccountName')]"
                },
                {
                    "name": "EXTERNALDNSNAME",
                    "secureValue": "[parameters('ExternalDNSUrl')]"
                },
                {
                    "name": "EXTERNALDNSURL",
                    "secureValue": "[concat('https://',parameters('ExternalDNSUrl'))]"
                },                
                {
                    "name": "OIDCURL",
                    "secureValue": "[concat('https://login.microsoftonline.com/',parameters('TennantId'))]"
                },
                {
                    "name": "LICENSEDATA",
                    "secureValue": "[parameters('LicenseData')]"
                },
                {
                    "name": "ACRUSER",
                    "secureValue": "[parameters('AcrUser')]"
                },
                {
                    "name": "ACRUSERPASSWORD",
                    "secureValue": "[parameters('AcrUserPassword')]"
                },
                {
                    "name": "TLSCERT",
                    "secureValue": "[parameters('tlsCert')]"
                },
                {
                    "name": "TLSKEY",
                    "secureValue": "[parameters('tlsKey')]"
                }

            ],
            "scriptContent": "az aks install-cli;az aks get-credentials --resource-group $RESOURCEGROUPNAME --name $CLUSTERNAME --overwrite-existing;curl -fsSL -o get_helm.sh https://raw.githubusercontent.com/helm/helm/master/scripts/get-helm-3;chmod 700 get_helm.sh;./get_helm.sh;helm repo add stable https://kubernetes-charts.storage.googleapis.com/;curl -fsSL -o n.yaml https://raw.githubusercontent.com/Profisee/kubernetes/master/scripts/nginxSettings.yaml;helm install nginx stable/nginx-ingress --values n.yaml;storageAccountPassword=$(az storage account keys list --resource-group $RESOURCEGROUPNAME --account-name $STORAGEACCOUNTNAME --query '[0].value');helm install profiseeplatform2020r1 profisee/profisee-platform --values .s.yaml --set sqlServer.name=$SQLNAME --set sqlServer.databaseName=$SQLDBNAME --set sqlServer.userName=$SQLUSERNAME --set sqlServer.password=$SQLUSERPASSWORD --set profiseeRunTime.fileRepository.userName=$FILEREPOUSERNAME --set profiseeRunTime.fileRepository.password=$storageAccountPassword --set profiseeRunTime.fileRepository.location=$FILEREPOURL --set profiseeRunTime.oidc.authority=$OIDCURL --set profiseeRunTime.oidc.clientId=$OIDCCLIENTID --set profiseeRunTime.oidc.clientSecret=$OIDCCLIENTSECRET --set profiseeRunTime.adminAccount=$ADMINACCOUNTNAME --set profiseeRunTime.externalDnsUrl=$EXTERNALDNSURL --set profiseeRunTime.externalDnsName=$EXTERNALDNSNAME --set licenseFileData=$LICENSEDATA --set image.auth=$ACRAUTH --set tlsCert=$TLSCERT --set tlsKey=$TLSKEY",
            "timeout": "PT1H",
            "cleanupPreference": "OnSuccess",
            "retentionInterval": "P1D"
        }
        }
        
    ]
}
